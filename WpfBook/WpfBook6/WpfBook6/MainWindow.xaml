<Window x:Class="WpfBook6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBook6"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="625" MinWidth="450" MinHeight="100">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu-->
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="Plik">
                <MenuItem Header="Zapisz jako" Click="Zapisz_Click"/>
                <MenuItem Header="Drukuj" Click="Tmp_Click"/>
                <Separator/>
                <MenuItem Header="Wyjście" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Narzędzia">
                <MenuItem Header="Ramka" IsChecked="True" IsCheckable="True" Checked="RamkaOn_Click" Unchecked="RamkaOff_Click"/>
                <Separator/>
                <MenuItem Header="Ustawienia" Click="Tmp_Click"/>
                <MenuItem Header="Rozmiar">
                    <MenuItem Header="Zwiększ +" Click="Tmp_Click"/>
                    <MenuItem Header="Zmniejsz -" Click="Tmp_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="O programie" Click="OProgramie_Click"/>
            </MenuItem>
        </Menu>

        <!-- Przeglądarka -->
        <DockPanel Grid.Row="1" Grid.Column="0">
            <ToolBar DockPanel.Dock="Top">
                <Button x:Name="btnWstecz" Content="Wstecz" Background="LightSteelBlue" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" 
                        Width="55" Click="btnWstecz_Click"/>
                <Button x:Name="btnDalej" Content="Dalej" Background="LightSteelBlue" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" 
                        Width="55" Click="btnDalej_Click"/>
                <Separator/>
                <TextBox x:Name="txtAdres" HorizontalAlignment="Right" Height="25" TextWrapping="Wrap" Text="http://" KeyUp="txtAdres_KeyUp" VerticalAlignment="Top" 
                         MinWidth="220">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="ApplicationCommands.Cut" Icon=":)" ToolTip="Wycinanko"/>
                            <MenuItem Command="ApplicationCommands.Copy">
                                <MenuItem.Icon>
                                    <Image Source="C:\Users\Komputer\Documents\Visual Studio 2017\Projects\WpfBook6\WpfBook6\pic.png" MaxHeight="20" MaxWidth="20"/>
                                </MenuItem.Icon>
                                <MenuItem.ToolTip>
                                    Kopiowanko
                                </MenuItem.ToolTip>
                            </MenuItem>
                            <MenuItem Command="ApplicationCommands.Paste" ToolTip="Wklejanko"/>
                            <Separator/>
                            <MenuItem Header="Dodaj do ulubionych">
                                <MenuItem Header="Do folderu" Click="Tmp_Click"/>
                                <MenuItem Header="Do paska ulubionych" Click="Tmp_Click"/>
                            </MenuItem>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>
                <Button x:Name="btnWejdz" Content="Wejdź" Background="LightSteelBlue" HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" 
                        MinWidth="50" Width="50" Click="btnWejdz_Click"/>
            </ToolBar>

            <Border x:Name="brdRamka" BorderThickness="3" BorderBrush="DarkCyan">
                <WebBrowser x:Name="wbPrzegladarka" Navigating="wbPrzegladarka_Navigating" Navigated="wbPrzegladarka_Navigated" HorizontalAlignment="Left" 
                            VerticalAlignment="Top"/>
            </Border>
        </DockPanel>

    </Grid>
</Window>
