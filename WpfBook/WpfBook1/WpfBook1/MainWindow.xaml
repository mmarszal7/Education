<Window x:Class="WpfBook1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBook1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Opacity ="1" x:Name="btnPrzycisk" Content="Przycisk" Margin="30" Background="#FFE42C2C" BorderBrush="#FF77FF18" Foreground="#FF2AFDEA" Click="btnPrzycisk_Click" />

        <Label Content="Chcesz podwyżke?"/>
        <Grid Name="siatka">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
        <Button Opacity ="1" x:Name="Tak" Content="Tak" Margin="10" Grid.Row="0" Background="#FFE42C2C" BorderBrush="#FF77FF18" Foreground="#FF2AFDEA" MouseEnter="Tak_MouseEnter" Click="Tak_Click" />
        <Button Opacity ="1" x:Name="Nie" Content="Nie" Margin="10" Grid.Row="1" Background="#FFE42C2C" BorderBrush="#FF77FF18" Foreground="#FF2AFDEA" MouseEnter="Nie_MouseEnter" Click="Nie_Click"/>
        </Grid>
    </StackPanel>
</Window>
